
@{
    ViewBag.Title = "EventDetails";
}
    <div ng-controller="EventController">
        <img ng-src="{{event.imageUrl}}" alt="{{event.name}}" width="100%" height="200px" />
        <div class="row">
            <div class="page-header">
                <h2 ng-bind-template="{{event.name}} {{event.date}}"></h2>
            </div>
        </div>
        
        <div ng-non-bindable>{{1+3}}<p>ng-non-bindabl</p></div>
        <div>{{3.4444365354 |number:2 | currency}}</div>
        <p>{{try}}</p>
        <p ng-bind-html="snippet"></p>
        <p ng-bind-html="myHTML"></p>
        <h2 ng-show="boolValue">Show This</h2>
        <h2 ng-hide="boolValue">Hide This</h2>
        <div class="row" style="border:2px solid red">
            <div class="col-md-6">
                <div><strong>Date:</strong>{{event.date}}</div>
                <div><strong>Time:</strong>{{event.time}}</div>
            </div>
            <div class="col-md-6">
                <div><strong>address:</strong>{{event.location.address}}</div>
                <div><strong>city:</strong>{{event.location.city}}</div>
                <div><strong>province:</strong>{{event.location.province}}</div>

            </div>
        </div>
        <br />
        <h2>Session</h2>
        <ul>
            <li ng-repeat="session in event.sessions | orderBy:'name'" class="thumbnail">
                <div class="row">
                    <div class="col-md-1 well">
                        <div class="btn btn-info" ng-click="votingup(session)">
                            <i class="glyphicon-chevron-up"></i>
                        </div>
                        <div class="badge text-center">
                            <div>{{session.upvotecount}}</div>
                        </div>
                        <div class="btn btn-danger" ng-click="votingdown(session)">
                            <i class="glyphicon-chevron-down"></i>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <h2>Name : {{session.name}}</h2>
                        <h3 style="margin-top:10px">Crator :{{session.creator}}</h3>
                        <span>Poems :{{session.poems}}</span>
                    </div>
                </div>
            </li>
        </ul>


    </div>

